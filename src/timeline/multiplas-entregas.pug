//- RENDER TIMELINE TOOLTIPS -->

<tr>
  <td colspan="2" style="font-family: Trebuchet MS, Arial, Helvetica, sans-serif; font-size: 12px; color: #FFF; text-align: center;">
    <div class="only-mobi" style="text-align: center; width: 80%; margin: 10px auto; background: #000000; border-radius: 5px; padding: 10px;"><font size="4">#{stepName}</font></div>
    <div class="only-desk" style="display: none; margin-left: 20px;">
      if step == "confirmado"
        include multiplas-entregas/tooltips/multiplas-entregas-tooltip-confirmado-desk
      else if step == "autorizado"
        include multiplas-entregas/tooltips/multiplas-entregas-tooltip-autorizado-desk
      else if step == "faturadoEntrega1"
        include multiplas-entregas/tooltips/multiplas-entregas-tooltip-entrega-1-faturado-desk
      else if step == "naLojaEntrega1"
        - var stepName = "Na loja"
        include multiplas-entregas/tooltips/multiplas-entregas-tooltip-entrega-1-naloja-desk
      else if step == "entregueEntrega1"
        include multiplas-entregas/tooltips/multiplas-entregas-tooltip-entrega-1-entregue-desk
      else if step == "faturadoEntrega2"
        include multiplas-entregas/tooltips/multiplas-entregas-tooltip-entrega-2-faturado-desk
      else if step == "enviadoEntrega2"
        include multiplas-entregas/tooltips/multiplas-entregas-tooltip-entrega-2-enviado-desk
      else if step == "naLojaEntrega2"
        include multiplas-entregas/tooltips/multiplas-entregas-tooltip-entrega-2-naloja-desk
      else if step == "entregueEntrega2"
        include multiplas-entregas/tooltips/multiplas-entregas-tooltip-entrega-2-entregue-desk
    </div>
  </td>
</tr>


